{
  "compilerOptions": {
    "module": "commonjs",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es2017", // Changed from "es6" to "es2017"
    "strict": true, // Recommended to set strict mode to true
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "removeComments": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
