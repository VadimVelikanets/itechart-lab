{
  "compilerOptions": {
    "module": "commonjs",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es6",
    "strict": false,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "removeComments": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}